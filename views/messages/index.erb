<!doctype html>

<html>
  <head>
    <title>Natter</title>
  </head>
  <body>
    <% if @user %>
      <h1>Welcome, <%= @user.full_name %></h1>
    <% end %>
    <h2>Peeps: </h2>
    <ul>
      <% @messages.each do |message| %>
        <li><%= "#{message.time_stamp} - #{message.text}" %> </li>
        <% end %>
    </ul> 
  </body>
</html>